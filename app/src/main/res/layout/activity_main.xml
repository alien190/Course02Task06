<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ivanovnv.course02task06.MainActivity"
    android:layout_margin="@dimen/margin"
    android:orientation="vertical">

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/et_url"
        android:hint="@string/et_url_hint"
        android:inputType="textUri"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_download"
        android:text="@string/bt_download"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_image"
        android:src="@raw/sample_image"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_show_image"
        android:text="@string/bt_show_image"
        android:enabled="false"/>

</LinearLayout>
